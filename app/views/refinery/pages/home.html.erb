<%# = render '/refinery/content_page' %>

<div class="section section-header">
  <div class="parallax filter">
    <div class="image" style="background-image: url('/assets/img/banner-4.jpg')"></div>
    <div class="container">
      <div class="content">
        <div class="title-area">
          <%= raw @page.content_for(:banner) %>
          <div class="separator line-separator">♦</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="title-area">
        <%= raw @page.content_for(:body) %>
        <div class="separator separator-danger">✻</div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="info-icon">
          <div class="icon text-danger">
              <i class="pe-7s-anchor"></i>
          </div>
          <%= raw @page.content_for(:left_card) %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="info-icon">
          <div class="icon text-danger">
            <i class="pe-7s-film"></i>
          </div>
          <%= raw @page.content_for(:center_card) %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="info-icon">
          <div class="icon text-danger">
            <i class="pe-7s-camera"></i>
          </div>
          <%= raw @page.content_for(:right_card) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="parallax">
    <div class="image" style="background-image: url('/assets/img/banner-2.jpg')"></div>
  </div>
</div>

<div class="section section-info section-info-presentation">
  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div class="info-pricing">
          <div class="icon">
            <i class="pe-7s-helm icons-info text-danger"></i>
          </div>
          <div class="text">
            <%= raw @page.content_for(:side_top) %>
          </div>
        </div>
        <div class="info-pricing">
          <div class="icon">
            <i class="pe-7s-users icons-info text-danger"></i>
          </div>
          <div class="text">
            <%= raw @page.content_for(:side_middle) %>
          </div>
        </div>
        <div class="info-pricing">
          <div class="icon">
            <i class="pe-7s-help2 icons-info text-danger"></i>
          </div>
          <div class="text">
            <%= raw @page.content_for(:side_bottom) %>
            <h3 class="title-info">Built with sections</h3>
            <p class="text-description text-gray">Want to prototype very fast? <b>Gaia Bootstrap Template</b> is made with sections that can be integrated very easy and look perfect together.</p>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="image-container">
          <img src="/assets/img/reaching-1.jpg" alt="" />
        </div>
      </div>
    </div>
  </div>
</div>
